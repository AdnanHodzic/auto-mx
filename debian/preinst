#!/bin/sh
# preinst script for auto-mx
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    
    # get mendix key
	#wget -q https://hodzic.org/debian-mendix-keyring.gpg -O- | sudo apt-key add -

	# add repositories
	#repo="deb http://packages.mendix.com/platform/debian/ wheezy main contrib non-free"
	#sources=/etc/apt/sources.list	
	#echo -n "$repo" >> "$sources" 

	# update repos?
	# apt-get update
	
	/usr/bin/auto-mx
    ;;

    abort-upgrade)
        invoke-rc.d tomcat6 stop
	# invoke-rc.d tomcat stop 2>&1 || true
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
